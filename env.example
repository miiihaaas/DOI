# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=mysql+pymysql://username:password@localhost/doi_db

# File Upload Configuration  
UPLOAD_FOLDER=uploads

# Cache Configuration
CACHE_TYPE=simple

# Crossref API Configuration (for future use)
CROSSREF_API_URL=https://api.crossref.org
CROSSREF_DEPOSITOR_NAME=your-organization-name
CROSSREF_DEPOSITOR_EMAIL=depositor@yourorganization.com

# Email Configuration (for future use)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/doi_app.log