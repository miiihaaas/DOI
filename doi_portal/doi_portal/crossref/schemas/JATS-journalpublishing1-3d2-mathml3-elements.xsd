    <!-- Paragraph element for abstract content -->
    <xsd:element name="p">
        <xsd:complexType mixed="true">
            <xsd:sequence>
                <xsd:any minOccurs="0" maxOccurs="unbounded" processContents="lax"/>
            </xsd:sequence>
            <xsd:anyAttribute processContents="lax"/>
        </xsd:complexType>
    </xsd:element>

    <!-- Section element for structured abstracts -->
    <xsd:element name="sec">
        <xsd:complexType mixed="true">
